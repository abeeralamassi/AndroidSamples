<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mhdr.ir.a062.MainActivity">


    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="View" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/buttonView"
        android:layout_alignStart="@+id/buttonView"
        android:layout_below="@+id/buttonView"
        android:layout_marginTop="20dp"
        android:text="Search" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/buttonSearch"
        android:layout_alignRight="@+id/buttonSearch"
        android:layout_below="@+id/buttonSearch"
        android:layout_marginTop="20dp"
        android:text="Update" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/buttonUpdate"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_below="@+id/buttonUpdate"
        android:layout_marginTop="20dp"
        android:text="Delete" />
</RelativeLayout>
