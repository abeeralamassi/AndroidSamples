<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iterator.ir.a051.MainActivity">


    <Button
        android:id="@+id/buttonProgress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="STYLE_HORIZONTAL"
        android:width="200dp"/>

    <Button
        android:id="@+id/buttonProgress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonProgress1"
        android:layout_alignStart="@+id/buttonProgress1"
        android:layout_below="@+id/buttonProgress1"
        android:layout_marginTop="50dp"
        android:text="Indeterminate"
        android:width="200dp"/>

    <Button
        android:id="@+id/buttonProgress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonProgress2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="STYLE_SPINNER"
        android:width="200dp"/>
</RelativeLayout>
